  <div class="sidebar-box ftco-animate">
    <div class="categories">
      <h3>Categories</h3>
      {% set featuredCount = 0 %}
      {% for listing in collections.listings %}
        {% if listing.data.featured %}
          {% set featuredCount = featuredCount + 1 %}
        {% endif %}
      {% endfor %}
      <li><a href="/blog/">Blog Posts <span>({{ collections.blog | length }})</span></a></li>
      <li><a href="/#properties">Featured Listings <span>({{ featuredCount }})</span></a></li>
      <li><a href="/#testimonials">Testimonials <span>({{ collections.testimonials | length }})</span></a></li>
    </div>
  </div>

  <div class="sidebar-box ftco-animate">
    <h3>Recent Blog</h3>
    {% set postCount = 0 %}
    {% for post in collections.blog %}
      {% if postCount < 3 %}
        <div class="block-21 mb-4 d-flex">
          <a class="blog-img mr-4" style="background-image: url('{{ post.data.hero_image or '/assets/images/Kelly-Large.webp' }}');"></a>
          <div class="text">
            <h3 class="heading"><a href="/blog/{{ post.fileSlug }}/">{{ post.data.title }}</a></h3>
            <div class="meta">
              {% if post.data.date %}
                <div><a href="#"><span class="icon-calendar"></span> {{ post.data.date | date("%B %d, %Y") }}</a></div>
              {% endif %}
              <div><a href="#"><span class="icon-person"></span> {{ post.data.author or "Admin" }}</a></div>
            </div>
          </div>
        </div>
        {% set postCount = postCount + 1 %}
      {% endif %}
    {% endfor %}
  </div>

  <div class="sidebar-box ftco-animate">
    <h3>Tag Cloud</h3>
    <div class="tagcloud">
      {% if collections.allTags and collections.allTags.length > 0 %}
        {% for tag in collections.allTags %}
          <a href="/blog/tag/{{ tag }}/" class="tag-cloud-link">{{ tag }}</a>
        {% endfor %}
      {% else %}
        <a href="#" class="tag-cloud-link">real-estate</a>
        <a href="#" class="tag-cloud-link">ellis-county</a>
        <a href="#" class="tag-cloud-link">tips</a>
      {% endif %}
    </div>
  </div>

  <div class="sidebar-box ftco-animate">
    <h3>Paragraph</h3>
    <p>Welcome to Kelly Cypret Real Estate! Stay updated with the latest real estate news, tips, and insights from Ellis County, Texas.</p>
  </div>
</div>

