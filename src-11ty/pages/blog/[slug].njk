---
pagination:
  data: collections.blog
  size: 1
  alias: post
permalink: "/blog/{{ post.fileSlug }}/"
layout: layout.njk
showHomeHero: false
---

{% set title = post.data.title %}
{% set breadcrumbs = [
  { label: "Blog", url: "/blog/" }
] %}
{% include "blog/post-hero.njk" %}

<section class="ftco-section">
  <div class="container">
    <div class="row">
      <div class="col-md-8 ftco-animate">
        {% if post.data.hero_image %}
          <p>
            <img src="{{ post.data.hero_image }}" alt="{{ post.data.title }}" class="img-fluid">
          </p>
        {% endif %}
        <h2 class="mb-3">{{ post.data.title }}</h2>
        {{ post.templateContent | safe }}
        
        {% if post.data.tags %}
          <div class="tag-widget post-tag-container mb-5 mt-5">
            <div class="tagcloud">
              {% for tag in post.data.tags %}
                <a href="/blog/tag/{{ tag }}/" class="tag-cloud-link">{{ tag }}</a>
              {% endfor %}
            </div>
          </div>
        {% endif %}
        
        <div class="about-author d-flex p-4 bg-light">
          <div class="bio mr-5">
            <img src="/assets/images/kelly-thumb.jpg" alt="Kelly Cypret" class="img-fluid mb-4">
          </div>
          <div class="desc">
            <h3>Kelly Cypret</h3>
            <p>Kelly, a former elementary teacher, channels her passion for education into real estate, guiding clients with care since 2021. With expertise in Ellis County, she helps families find their dream homes with integrity and dedication.</p>
          </div>
        </div>
      </div>
      {% include "blog/sidebar.njk" %}
    </div>
  </div>
</section>

