






<section class="ftco-section" id="properties">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Properties</span>
                <h2 class="mb-2">For Sale</h2>
            </div>
        </div>
        <div class="row ftco-animate">
            <div class="col-md-12">
                <div class="<%= data.for_sale.homes.length > 1 ? 'carousel-properties owl-carousel' : '' %>">
                    <% data.for_sale.homes.each do |home| %>
                        <div class="item">
                                <div class="property-wrap ftco-animate">
                                    <a href="<%= home.url %>" class="img" style="background-image: url(<%= home.image %>);">
                                        <div class="rent-sale">
                                            <span class="sale"><%= home.status %></span>
                                        </div>
                                        <p class="price">
                                            <!-- IF OLD PRICE -->
                                            <% if home.old_price %>
                                                <span class="old-price"><%= home.old_price %></span>
                                            <% end %>
                                            <!-- IF OLD PRICE -->
                                            <span class="orig-price"><%= home.price %></span>
                                        </p>
                                    </a>
                                    <div class="text">
                                        <ul class="property_list">
                                            <li><span class="fi flaticon-bed"></span><%= home.bedrooms %></li>
                                            <li><span class="fi flaticon-bathtub"></span><%= home.bathrooms %></li>
                                            <li><span class="fi flaticon-floor-plan"></span><%= home.squarefoot %></li>
                                        </ul>
                                        <h3><a href="<%= home.url %>"><%= home.address %></a></h3>
                                        <span class="location"><%= home.city_state %></span>
                                        <a href="<%= home.url %>" class="d-flex align-items-center justify-content-center btn-custom">
                                            <span class="fa fa-link"></span>
                                        </a>
                                        <div class="list-team d-flex align-items-center mt-2 pt-2 border-top">
                                            <div class="d-flex align-items-center">
                                                <div class="img" style="background-image: url(images/kelly-thumb.jpg);"></div>
                                                <h3 class="ml-2"><%= home.comments %></h3>
                                            </div>
                                            <span class="text-right">Reduced!</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>